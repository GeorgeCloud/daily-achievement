// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://kiirb:@localhost:5432/daily-achievement"
}

model User {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @unique
  password    String
  tasks       Task[]
  createdOn   DateTime @default(now())
}

model Task {
  id        Int        @id @default(autoincrement())
  title     String
  time      DateTime
  dates     DateTime[]
  desc      String
  color     String
  location  String
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  createdOn DateTime   @default(now())

  @@unique([userId, title])
}
